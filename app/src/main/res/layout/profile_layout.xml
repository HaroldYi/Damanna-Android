<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:id="@+id/profile_layout_sc"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_layout_rl"
        >

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/white"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/add_friend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/drop_down_option_menu" />

            <ImageView
                android:id="@+id/drop_down_option_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/add_friend"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/user_profile_photo"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/user_profile_name"
                android:layout_marginTop="47.5dp"
                android:text="Android free tutorials and example"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <com.hello.TrevelMeetUp.common.RadiusImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/add_friend"
                android:layout_marginStart="15dp"
                />
        </RelativeLayout>

        <it.neokree.materialtabs.MaterialTabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/profile_layout"
            app:textColor="@color/black"
            app:accentColor="#03c4c9"
            app:primaryColor="@android:color/white" />

        <com.hello.TrevelMeetUp.view.ExpandableHeightGridView
            android:id="@+id/photo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:horizontalSpacing="3dp"
            android:verticalSpacing="3dp"
            android:isScrollContainer="false"
            android:stretchMode="columnWidth"
            android:numColumns="2"
            android:layout_below="@+id/tabHost"
            >
        </com.hello.TrevelMeetUp.view.ExpandableHeightGridView>

        <RelativeLayout
            android:id="@+id/list_hd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/photo_list"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/newSayBtn"
                android:layout_alignBottom="@+id/newSayBtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:text="Say"
                android:textAllCaps="true"
                android:textColor="#423752"
                android:textSize="18sp" />

            <Button
                android:id="@+id/newSayBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:text="New"
                android:textColor="#423752" />
        </RelativeLayout>

        <com.hello.TrevelMeetUp.view.ExpandableHeightListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabHost"
            android:background="@color/white"
            android:dividerHeight="0px"
            android:divider="#ffffff"
            android:id="@+id/say_list"/>

    </RelativeLayout>
</ScrollView>